{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    // "rootDir": "src",
    // "importHelpers": false,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": false,
    "noUnusedLocals": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "importsNotUsedAsValues":"preserve",
    "typeRoots": ["src/typings", "./node_modules/@types", "./typings"],
    "resolveJsonModule": true,
    "paths": {
      "*": ["./*", "./typings"]
    },

  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*"]
}